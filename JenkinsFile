pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Stage 1:- Building the code using a build tool like Maven or Gradle...'
            }
        }

        stage('Unit and Integration Tests') {
            steps {
                echo 'Stage 2: Running unit and integration tests...'
            }
            post {
                success {
                    emailext (
                        to: 'muazhoquenoman2004@gmail.com',
                        subject: "SUCCESS: Unit & Integration Tests - ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                        body: "Unit and Integration Tests passed for job ${env.JOB_NAME} build #${env.BUILD_NUMBER}.\nCheck console output at: ${env.BUILD_URL}",
                        attachLog: true
                    )
                }
                failure {
                    emailext (
                        to: 'muazhoquenoman2004@gmail.com',
                        subject: "FAILURE: Unit & Integration Tests - ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                        body: "Unit and Integration Tests failed for job ${env.JOB_NAME} build #${env.BUILD_NUMBER}.\nCheck console output at: ${env.BUILD_URL}",
                        attachLog: true
                    )
                }
            }
        }

        stage('Code Analysis') {
            steps {
                echo 'Stage 3: Analyzing code quality with SonarQube...'
            }
        }

        stage('Security Scan') {
            steps {
                echo 'Stage 4: Scanning for vulnerabilities...'
            }
            post {
                success {
                    emailext (
                        to: 'muazhoquenoman2004@gmail.com',
                        subject: "SUCCESS: Security Scan - ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                        body: "Security Scan passed for job ${env.JOB_NAME} build #${env.BUILD_NUMBER}.\nCheck console output at: ${env.BUILD_URL}",
                        attachLog: true
                    )
                }
                failure {
                    emailext (
                        to: 'muazhoquenoman2004@gmail.com',
                        subject: "FAILURE: Security Scan - ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                        body: "Security Scan failed for job ${env.JOB_NAME} build #${env.BUILD_NUMBER}.\nCheck console output at: ${env.BUILD_URL}",
                        attachLog: true
                    )
                }
            }
        }

        stage('Deploy to Staging') {
            steps {
                echo 'Stage 5: Deploying to staging server...'
            }
        }

        stage('Integration Tests on Staging') {
            steps {
                echo 'Stage 6: Running integration tests on staging...'
            }
        }

        stage('Deploy to Production') {
            steps {
                echo 'Stage 7: Deploying to production server...'
            }
        }
    }
}

